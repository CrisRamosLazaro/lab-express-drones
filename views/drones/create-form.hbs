<div class="container">
    <h2>Create a new drone</h2>
    <hr class="mb-5">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <form action="/drones/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="droneModel" class="form-label">Model</label>
                    <input type="text" class="form-control" id="droneModel" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3 ">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>


                <button type="submit" class="btn btn-dark">Add drone</button>
            </form>

        </div>
    </div>



</div>